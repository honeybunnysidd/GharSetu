<% layout('./layouts/boilerplate') -%>

<div class="row">
  <div class="col-6 offset-3">
    <h3 class="container mt-4">Login</h3>
    <form
      action="/login"
      method="post"
      class="container mt-5 mb-5 needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username *</label>
        <input
          type="text"
          name="username"
          class="form-control"
          required
          id="username"
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password *</label>
        <input
          type="password"
          name="password"
          class="form-control"
          required
          id="password"
        />
      </div>
      <a href="/listings" class="btn btn-danger me-3">Back</a>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
