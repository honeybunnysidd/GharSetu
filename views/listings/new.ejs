<% layout('./layouts/boilerplate') -%>

<div class="row">
  <div class="col-8 offset-2">
    <h3 class="container mt-4">Create New Listing:</h3>
    <form
      action="/listings"
      method="post"
      class="container mt-5 mb-5 needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          required
          id="title"
          placeholder="Enter a title"
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please enter a valid titile</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
          id="description"
          placeholder="Write the description"
        ></textarea>
        <div class="invalid-feedback">Description should be valid!</div>
      </div>

      <div class="mb-3">
        <label for="img" class="form-label">Upload Image</label>
        <input
          required
          type="file"
          class="form-control"
          id="img"
          name="listing[image]"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            required
            type="number"
            class="form-control"
            id="price"
            name="listing[price]"
            placeholder="Enter Price"
          />
          <div class="invalid-feedback">Price should be valid!</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            required
            id="country"
            placeholder="Enter country"
          />
          <div class="invalid-feedback">Country should be valid!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          required
          id="location"
          placeholder="Enter location"
        />
        <div class="invalid-feedback">Location should be valid!</div>
      </div>

      <a href="/listings" class="btn btn-danger">Back</a>
      <button type="submit" class="btn btn-success ms-3">Create</button>
    </form>
  </div>
</div>
